<form action="/<%=@posts[:id]%>" method="POST">

	<% if (@posts[:id] != "")%>
		<input type="hidden" name="_method" value="PUT">
	<% end %>

	<div>
		<label>Title</label>
		<input type="text" name="title" placeholder="Enter a Title" value="<%=@posts[:title]%>" >
	</div>
	<div>
		<label>Content</label>
		<textarea name="content" placeholder="The content goes here ... " ><%=@posts[:content]%></textarea>
	</div>
	<div>
		<input type="Submit" value="Save Post">	
	</div>

</form>