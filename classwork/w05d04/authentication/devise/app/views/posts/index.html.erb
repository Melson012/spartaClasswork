<%= link_to 'New Post', new_post_path %>
<div class="col-sm-12 rb">
  <p id="notice"><%= notice %></p>
  <h1>Posts</h1>
  <% @posts.each do |post| %>
    <div class="posts">
      <h4><%= post.title %></h4>
      <%= post.body %>
      <%= post.user.id%>
      <div class="edits">
        <%= link_to 'Show', post %> |
        <%= link_to 'Edit', edit_post_path(post) %> |
        <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %>
      </div>
   </div>    
  <% end %>
</div>




