<form action="/<%= @post.id %>" method="POST">
    <% if(@post.id != "") %>
        <input type="hidden" name="_method" value="PUT">
    <% end %>
    <div class="form-group">
        <label>DP</label>
        <input class="form-control" type="text" name="image" placeholder="Enter a link" value="<%= @post.image %>">
    </div>
    <div class="form-group">
        <label>Title</label>
        <input class="form-control" type="text" name="title" placeholder="Enter a Title" value="<%= @post.title %>">
    </div>
    <div class="form-group">
        <label>Content</label>
        <textarea class="form-control" name="body" placeholder="The Content"><%= @post.body %></textarea>
    </div>
    <div>
        <input type="submit" value="Save Post">
    </div>
</form>